generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model Games {
  game_id    Int          @id @default(autoincrement())
  game_name  String       @db.VarChar(100)

  characters Characters[]
  scores     Leaderboard[]
}

model Leaderboard {
  player_id   Int    @id @default(autoincrement())
  player_name String @db.VarChar(50)
  time_score  Int

  game_id Int?
  games    Games? @relation(fields: [game_id], references: [game_id])
}

model Characters {
  id             Int     @id @default(autoincrement())
  character_name String? @db.VarChar(100)

  x       Decimal @db.Decimal(5, 2)
  y       Decimal @db.Decimal(5, 2)

  game_id Int?
  games    Games? @relation(fields: [game_id], references: [game_id])
}